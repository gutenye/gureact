#!/usr/bin/env bash

export PATH="node_modules/.bin:$PATH"

build() {
  #rm -rf build/*
  babel . --out-dir build --ignore __tests__,build,flow-typed,node_modules,manualtest --copy-files
  cp package.json build
}

publish() {
  build
  cd build && npm publish
}

case "$1" in
  t | test ) jest --watch ;;
  b | build ) build ;;
  publish ) publish ;;
  docs ) styleguidist server ;;
  build:docs ) styleguidist build ;;
  deploy ) shift; git push origin master:$1;
esac
