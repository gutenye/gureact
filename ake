#!/usr/bin/env bash

export PATH="node_modules/.bin:$PATH"

main() {
  (cd test && webpack-dev-server --inline)
}

build() {
  rm build/* 2>/dev/null
  babel src -d build
}

watch() {
  rm build/* 2>/dev/null
  babel src -w -d build
}

case "$1" in
  "" ) main ;;
  b | build ) build ;;
  w | watch ) watch ;;
esac
